<node name="$(env ROS_HOSTNAME)_audio_node" pkg="icarus_rover_v2" type="audio_node"  output="screen" clear_params="true">
        <param name="verbosity_level"       value="DEBUG"/>
        <param name="require_pps_to_start"  value="false"/> 
        <param name="loop1_rate"            value="5.0"/> 
        <param name="audiostage_directory" value="/home/robot/storage/AUDIO"/>
        <param name="audiofile_length"      value="30"/>
        <param name="audiobuffer_length"    value="30"/>
        <param name="volume_perc"    value="100.0"/>
</node>
